{
  "name": "userdive-browser-extension",
  "version": "1.0.0",
  "description": "Web browser extensions for USERDIVE",
  "main": "index.js",
  "scripts": {
    "build": "run-p build:*",
    "build:html": "pug app/pages/ -o dist",
    "build:js": "webpack",
    "build:manifest": "cpx app/manifest.json dist",
    "lint": "tslint '{app,__tests__}/**/*.ts'",
    "test": "jest",
    "prebuild": "rimraf dist",
    "precommit": "lint-staged"
  },
  "repository": "git+https://github.com/taka-sho/userdive-browser-extension.git",
  "keywords": [],
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/__tests__/*.ts"
    ],
    "testURL": "http://localhost/",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier-eslint --write",
      "tslint --fix",
      "git add"
    ]
  },
  "author": "taka-sho <takasho530000@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/taka-sho/userdive-browser-extension/issues"
  },
  "homepage": "https://github.com/taka-sho/userdive-browser-extension#readme",
  "devDependencies": {
    "@types/chrome": "^0.0.71",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.7",
    "@types/webpack": "^4.4.9",
    "@uncovertruth/eslint-config": "^4.5.0",
    "@uncovertruth/stylelint-config": "^4.4.0",
    "@uncovertruth/tslint-config": "^4.5.0",
    "cpx": "^1.5.0",
    "css-loader": "^1.0.0",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "npm-run-all": "^4.1.3",
    "prettier-eslint-cli": "^4.7.1",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.2",
    "style-loader": "^0.22.1",
    "stylelint": "^9.4.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  }
}
